{
  "name": "recordhub",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/kumabook/recordhub",
  "author": "Hiroki Kumamoto <kumabook@live.jp>",
  "license": "MIT",
  "scripts": {
    "build": "npm run fonts && npm run sass",
    "sass": "node-sass Resources/sass/index.scss Public/styles/materialize.min.css --output-style compressed --source-map true --include-path node_modules/materialize-css/sass/",
    "fonts": "cp -r node_modules/materialize-css/fonts Public/",
    "watch": "node-sass node_modules/materialize-css/sass/materialize.scss Public/styles/materialize.min.css --output-style compressed --source-map true --watch",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "materialize-css": "^0.98.2",
    "node-sass": "^4.5.3"
  }
}
