- url = @track.new_record? ? tracks_path : track_path(@track)

= render 'shared/form_errors', model: @track

= form_with model: @track, url: url, local: true do |f|
  %br
  = f.label(:name)
  = f.text_field(:name)
  %br
  = f.label(:phonetic_name)
  = f.text_field(:phonetic_name)
  %br
  = f.label(:furigana)
  = f.text_field(:furigana)
  %br
  = f.label(:artist_id)
  = f.hidden_field(:artist_id)
  = f.text_field(:artist_query, placeholder: "name")
  %br
  = f.label(:album_id)
  = f.hidden_field(:album_id)
  = f.text_field(:album_query, placeholder: "name")
  %br
  = f.submit(class: 'btn')
