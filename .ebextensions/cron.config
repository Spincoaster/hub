files:
  "/etc/cron.d/mycron":
    mode: "000644"
    owner: root
    group: root
    content: |
      0 */1 * * * root /usr/local/bin/crawl.sh > /var/log/crawler.log 2>&1
  "/usr/local/bin/crawl.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      source /opt/elasticbeanstalk/deployment/envvars

      env

      cd /var/app/current/
      bin/rails crawl_news
      bin/rails crawl_records
      bin/rails crawl_tracks

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/*.bak"
